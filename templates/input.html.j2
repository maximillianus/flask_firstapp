<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Input Test</title>
	<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>
<body>
	<h2>Test Radio Input here</h2>
	<form class="radioform" action="" method="post">
		<input type="radio" name="optionradio" value="1"> Option 1 <br>
		<input type="radio" name="optionradio" value="2"> Option 2 <br>
		<input type="radio" name="optionradio" value="3"> Option 3 
		<br><br>
		<input type="submit" value="Submit">
	</form>
	{% if passedvar == '1' %}
		<h3>You selection option {{passedvar}}: Red</h3>
	{% elif passedvar == '2' %}
		<h3>You selection option {{passedvar}}: Blue</h3>
	{% elif passedvar == '3' %}
		<h3>You selection option {{passedvar}}: Green</h3>
	{% endif %}
	
	<hr>

	<h2>Test Checkbox Input here</h2>
	<form class="chkboxform" action="" method="post">
		<input class="category" type="checkbox" name="optionchkbox" value="python"> Python <br>
		<input class="category" type="checkbox" name="optionchkbox" value="R"> R <br>
		<input class="category" type="checkbox" name="optionchkbox" value="powershell"> Powershell <br>
		<input class="category" type="checkbox" name="optionchkbox" value="batchscript"> BatchScript <br>
		<input class="category" type="checkbox" name="optionchkbox" value="cloud"> Cloud <br> 
		<input class="category" type="checkbox" name="optionchkbox" value="algorithm"> Algorithm <br> 
		<br>
		<input type="submit" value="Submit">
	</form>
	
	{% if passedvar  %}
		<h3>You selection option {{passedvar}}</h3>
	{% endif %}
	<hr>
	<script type='text/javascript'>
		$(document).ready(function(){
			var minlimit = 3;
			var maxlimit = 5;
			//Validate user is not inputting more than 5 categories
			$('input.category').on('change', function(evt) {
				if($(this).siblings(':checked').length >= maxlimit) {
					this.checked = false;
				}
			});

			//Validate user is inputting more than 3 categories
			$('form.chkboxform > input:submit').on('click', function(event) {
				if($(':checkbox:checked').length < minlimit){
					//prevent Default 'submit' button's action
					//this is to avoid form submitted unnecessarily
					event.preventDefault();
					//Give alert to user
					alert("You selected less than 3 category. Please select minimum 3.");
				}
			});
		});
	</script>
</body>
</html>